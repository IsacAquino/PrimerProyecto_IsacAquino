<!-- fragment_pull_up.xml -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f3ff"
        tools:context=".PullUpFragment">

        <TextView
            android:id="@+id/ejercicioNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pull-Up"
            android:textSize="28sp"
            android:textColor="#4A148C"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp"
            android:background="#E1BEE7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/ejercicioDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El pull-up es un ejercicio efectivo para trabajar los músculos de la espalda, los hombros y los bíceps, utilizando solo el peso corporal."
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/ejercicioNombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/ejercicioInstrucciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instrucciones:\n1. Agárrate de una barra de dominadas con las palmas hacia afuera y los brazos extendidos.\n2. Tira de tu cuerpo hacia arriba hasta que tu barbilla esté por encima de la barra.\n3. Baja lentamente tu cuerpo hasta la posición inicial con los brazos extendidos.\n4. Repite el movimiento tantas veces como sea necesario."
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/ejercicioDescripcion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
