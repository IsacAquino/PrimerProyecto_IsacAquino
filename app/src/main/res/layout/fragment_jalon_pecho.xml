<!-- fragment_jalon_al_pecho.xml -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f3ff"
        tools:context=".JalonPechoFragment">

        <TextView
            android:id="@+id/ejercicioNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jalón al Pecho"
            android:textSize="28sp"
            android:textColor="#4A148C"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp"
            android:background="#E1BEE7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/ejercicioDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El jalón al pecho es un ejercicio muy efectivo para desarrollar los músculos de la espalda, específicamente el dorsal ancho."
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/ejercicioNombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/ejercicioInstrucciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instrucciones:\n1. Siéntate en la máquina de jalón con una barra ancha.\n2. Sujeta la barra con un agarre ancho y palmas hacia adelante.\n3. Tira de la barra hacia abajo hasta que toque la parte superior de tu pecho.\n4. Regresa la barra a la posición inicial controlando el movimiento."
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/ejercicioDescripcion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
