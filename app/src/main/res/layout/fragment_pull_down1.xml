<!-- fragment_pull_downs.xml -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f3ff"
        tools:context=".PullDownsFragment">

        <TextView
            android:id="@+id/ejercicioNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pull Downs"
            android:textSize="28sp"
            android:textColor="#4A148C"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp"
            android:background="#E1BEE7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/ejercicioDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Los pull downs son un ejercicio ideal para trabajar la espalda y mejorar la fuerza en el tren superior."
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/ejercicioNombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/ejercicioInstrucciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instrucciones:\n1. Siéntate en la máquina de pull downs.\n2. Sujeta la barra con un agarre ancho y las palmas hacia adelante.\n3. Tira de la barra hacia abajo hasta tocar el pecho.\n4. Regresa la barra a la posición inicial controlando el movimiento."
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/ejercicioDescripcion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
